

from art import logo
print(logo)

def add(n1, n2):
    return n1 + n2
def subtract(n1, n2):
    return n1- n2

def multiply(n1, n2):
    return  n1 * n2
def divide(n1, n2):
    if n2 == 0:
        return "Ô∏è Error: Cannot divide by zero!"
    return n1 / n2

operations = {
     "+": add,
    "-": subtract,
    "*":  multiply,
    "/": divide
}
user_num1 = float(input("Enter your first number:\n"))

while True:
    print(logo)
    user_operation = input("Choose an operation: +, -, *, /\n")
    user_num2 = float(input("Enter your second number:\n"))

    operation_function = operations.get(user_operation)

    if operation_function:
        result = operation_function (user_num1, user_num2)
        print("Result:", result)
    else:
        print("Invalid operation")
        continue

    again = input("Do you want to continue with your result? (yes or no)").strip().lower()

    if again == "yes":
        user_num1 = result
    elif again == "no":
        print("Goodbye")
        break
    else:
        print("Please type 'yes' or 'no'")
